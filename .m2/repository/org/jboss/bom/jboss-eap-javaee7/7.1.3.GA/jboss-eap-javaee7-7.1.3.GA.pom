        <version.org.wildfly.discovery>1.0.0.Final-redhat-1</version.org.wildfly.discovery>


        <!-- Version of Hibernate projects -->
        <version.org.hibernate>5.1.14.Final-redhat-1</version.org.hibernate>
        <version.org.hibernate.commons-annotations>5.0.1.Final-redhat-2</version.org.hibernate.commons-annotations>
        <version.org.hibernate-jpamodelgen>${version.org.hibernate}</version.org.hibernate-jpamodelgen>
        <version.org.hibernate.validator>5.3.5.Final-redhat-2</version.org.hibernate.validator>
        <version.org.hibernate.search>5.5.8.Final-redhat-1</version.org.hibernate.search>

        <!-- Versions of projects not directly under JBoss umbrella -->
        <version.junit>4.12</version.junit>
        <version.log4j>1.2.17.redhat-3</version.log4j>
        <version.org.testng>6.9.10</version.org.testng>

